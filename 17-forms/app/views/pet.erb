<h1><%= @pet.name %></h1>
<h4><%= @pet.noise %> </h4>
<form method="post" action="/update-pet/<%= @pet.id %>">
    <input type="hidden" name="_method" value="patch">
    <p>Pet Name</p>
    <input name="pet[name]" type="text"  value="<%= @pet.name %>" />
    <p>Pet Noise</p>
    <input name="pet[noise]" type="text" value="<%= @pet.noise  %>" />
    <input type="submit" />
</form>