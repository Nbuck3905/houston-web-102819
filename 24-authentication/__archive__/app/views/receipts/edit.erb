<h1>Update Restaurant</h1>
<form method="POST" action="/receipts/<%= @receipt.id %>">
    <input type="hidden" name="_method" value="PATCH" />
    <div>
        <label>Amount</label>
        <input value="<%= @receipt.amount %>" type="text" name="amount">
    </div>
    <div>
        <label>Restaurant</label>
        <select name="restaurant_id" >
            <% Restaurant.all.each do | restaurant | %>
                <option 
                    <%= restaurant.id == @receipt.restaurant_id ? 'selected' : '' %>
                    value="<%= restaurant.id %>"
                >
                    <%= restaurant.name %>
                </option>
            <% end %>
        </select>
    </div>
     <div>
        <label>Customer</label>
        <select name="customer_id" >
            <% Customer.all.each do | customer | %>
                <option 
                    <%= customer.id == @receipt.customer_id ? 'selected' : '' %>
                    value="<%= customer.id %>"
                >
                    <%= customer.name %>
                </option>
            <% end %>
        </select>
    </div>
    <input type="submit">
    <a href="/receipts/<%= @receipt.id %>">Cancel</a>
</form>