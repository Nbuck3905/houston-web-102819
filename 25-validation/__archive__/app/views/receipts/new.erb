<h1>Create Receipt</h1>
<form method="POST" action="/receipts">
    <div>
        <label>Amount</label>
        <input value="<%= @receipt.amount %>" type="text" name="amount">
        <% if @receipt.valid? == false && @receipt.errors.messages[:amount] != nil%>
            <ul style="color: red;">
            <% @receipt.errors.messages[:amount].each do | error_message | %>
                <li><%= error_message %></li>
            <% end %>
            <ul>
        <% end %>
    </div>
    <div>
        <label>Restaurant</label>
        <select name="restaurant_id" >
            <% Restaurant.all.each do | restaurant | %>
                <option 
                    <%= restaurant.id == @receipt.restaurant_id ? 'selected' : '' %>
                    value="<%= restaurant.id %>"
                >
                    <%= restaurant.name %>
                </option>
            <% end %>
        </select>
    </div>
    <input type="submit">
    <a href="/receipts">Cancel</a>
</form>